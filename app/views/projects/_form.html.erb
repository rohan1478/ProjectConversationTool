<div class="max-w-screen-xl items-center mx-auto p-8 mt-6 bg-white p-6 rounded-lg shadow ">
<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div class="bg-red-500 text-white p-4 rounded mb-4" data-controller="flash">
      <h2 class="font-bold"><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul class="list-disc pl-5">
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :title, class: "block text-lg font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <div class="mb-6">
    <%= form.label :description, class: "block text-lg font-medium text-gray-700" %>
    <%= form.text_area :description, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <div class="mb-6">
    <%= form.label :status, class: "block text-lg font-medium text-gray-700" %>
    <%= form.select :status, Project.statuses.keys.map { |status| [status.humanize, status] }, {}, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "inline-block px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    <%= link_to 'Back to Projects', projects_path, class: "inline-block px-6 py-2 text-indigo-600 border border-indigo-600 rounded-md hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>
<% end %>
</div>