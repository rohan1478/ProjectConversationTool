<% if user_signed_in? %>
<nav class="bg-white shadow border-b border-gray-200">
  <div class="max-w-screen-xl flex items-center justify-between mx-auto p-4">
    <span class="text-2xl font-bold text-indigo-600">Project Conversation Tool</span>
			<div class="flex">
			<%= link_to "Home", root_path, class: "px-4 py-2 text-sm text-gray-700 hover:bg-indigo-100 hover:text-indigo-700 #{current_page?(root_path) ? 'font-semibold' : ''}" %>
      <%= link_to "Add Project", new_project_path, class: "px-4 py-2 text-sm text-gray-700 hover:bg-indigo-100 hover:text-indigo-700 #{current_page?(new_project_path) ? 'font-semibold' : ''}" %>
      <div class="relative group">
        <button class="text-sm text-gray-700 font-medium px-4 py-2 rounded hover:text-indigo-600">
				<i class="fa-solid fa-user"></i>
          <%= current_user.email %>
        </button>
        
        <!-- Dropdown menu -->
        <div class="absolute right-0 z-10 hidden group-hover:flex flex-col bg-white shadow-md  w-48 rounded-lg border border-gray-100">
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, data: { turbo: "false" }, class: "w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 hover:text-red-800" %>
        </div>
      </div>
			</div>
  </div>
</nav>
<% else %>

<nav class="bg-white shadow border-b border-gray-200">
  <div class="max-w-screen-xl mx-auto p-4 flex justify-center">
    <span class="text-2xl font-bold text-indigo-600">Project Conversation Tool</span>
  </div>
</nav>
<% end %>
